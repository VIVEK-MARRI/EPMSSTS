# Environment Configuration for EPMSSTS
# Copy this file to .env and customize as needed

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false

# Model Settings (do not change unless you know what you're doing)
WHISPER_MODEL=large-v3
EMOTION_MODEL=superb/wav2vec2-base-superb-er
TRANSLATION_MODEL=facebook/nllb-200-distilled-600M
TTS_MODEL=tts_models/multilingual/multi-dataset/your_tts

# Device Settings
# DEVICE=cuda  # Uncomment to force GPU
# DEVICE=cpu   # Uncomment to force CPU

# Timeout Settings (seconds)
TIMEOUT_STT=10
TIMEOUT_EMOTION=10
TIMEOUT_TRANSLATION=10
TIMEOUT_TTS=10
TIMEOUT_PIPELINE=15

# File Upload Settings
MAX_FILE_SIZE_MB=10

# Database Settings
DATABASE_URL=postgresql://epmssts:epmssts@localhost:5432/epmssts
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=3600

# Storage Settings
OUTPUTS_DIR=outputs
OUTPUTS_RETENTION_HOURS=24

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60
